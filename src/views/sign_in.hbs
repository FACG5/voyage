<div class="sign-in">
    <h2 class="sign-in-title">Enter your data to login</h2>
    <label for="input-email">
        <input type="email" id="input-email" placeholder="Email" required>
    </label>
    <label for="input-password">
        <input type="password" id="input-password" placeholder="Password" required>
    </label>
    <span id="message-error" class="message"></span>
    <button type="submit" id="send-button">Sign in</button>
    <a href="/sign_up" class="link-sing-up">Forget your password ?</a>
</div>
