                    {{/if}}
                </ul>
            </div>
            <div id="toggle-btn" onclick="toggleSidebar(this)">
                {{#if  req.is_user}}
                    <p class="fas fa-user-circle"></p>
                {{else}}
                    <span></span>
                    <span></span>
                    <span></span>
                {{/if}}

            </div>
        </div>
    </div>

<script>
    function toggleSidebar(ref) {
  ref.classList.toggle('active');
  document.getElementById('sidebar').classList.toggle('active');
}

</script>
