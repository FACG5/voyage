        <div class="logo">
            <a href="/">
                <h1>voyage</h1></a>
        </div>
        <div class="sidebar">
            <div id="sidebar">
                <ul>
                    {{#if req.is_user}}
                        <a href="#" class="sidebar-link">{{req.jwt_data.name}}</a>
                        <a href="/" class="sidebar-link"><li><span class="fas fa-search"></span>search</li></a>
                        <a href="about_us" class="sidebar-link"><li><span class="fas fa-question"></span> about us</li></a>
                        <a href="/contact_us" class="sidebar-link"><li><span class="fas fa-comment-alt"></span>contact us</li></a>
                        <a href="/sign_out" class="sidebar-link"><li><span class="fas fa-sign-out-alt"></span>sign out</li></a>
                    {{else}}
                    <a href="/" class="sidebar-link"><li><span class="fas fa-search"></span>search</li></a>
                    <a href="about_us" class="sidebar-link"><li><span class="fas fa-question"></span> about us</li></a>
                    <a href="/contact_us" class="sidebar-link"><li><span class="fas fa-comment-alt"></span>contact us</li></a>
